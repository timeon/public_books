<div class="row page-header">
  <div class="span0">
  <h3><%= singular_table_name.capitalize %> info</h3>
  </div>
  <div class="span0">
    <h3>
      <%%= link_to edit_<%= singular_table_name %>_path(@<%= singular_table_name %>, ref:request.path), :class => 'edit_button' do %>
        <span class="fa fa-pencil"></span>
      <%% end %>
      
      <%%= link_to <%= index_helper %>_path, :class => 'delete_button' do %>
        <span class="fa fa-list"></span>
      <%% end %>
    </h3>
  </div>
</div>

<p id="notice"><%%= notice %></p>

<%%= render partial: '/<%= plural_table_name %>/show', locals: {<%= singular_table_name %>: @<%= singular_table_name %>} %>

<div class="children_list tabbable tabs-left">
  <ul class="nav nav-tabs">
  </ul><!-- end-of-tabs -->
  <div class="tab-content">
  </div><!-- end-of-contents -->
</div><!--end-children-list -->
