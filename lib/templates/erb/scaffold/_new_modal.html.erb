<!-- Button trigger modal -->
<a class="add_button" data-toggle="modal" data-target="#add_<%= singular_table_name %>" title="Add <%%= as %>">
    <i class="fa fa-plus"></i>
</a>

<!-- Modal -->
<div class="modal fade" id="add_<%= singular_table_name %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Add <%%= as %></h4>
      </div>
      <div class="modal-body">
        <%%= render partial: '/<%= plural_table_name %>/form', locals:{<%= singular_table_name %>:<%= singular_table_name %>, owner:owner, as:as} %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">
          <i class="fa fa-remove fa-lg"></i> Close
        </button>
      </div>
    </div>
  </div>
</div>