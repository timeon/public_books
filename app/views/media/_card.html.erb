<div class="col-xs-12 col-sm-6 col-md-4 col-lg-2 medium_car">
  <div class="well">
      <span class="medium_name"><%= link_to medium, medium %></span><br>
    <% if !medium.name.blank? %>
      <span class="medium_name">Name: <b><%= medium.name %></b></span><br>
    <% end %>
    <% if !medium.icon.blank? %>
      <span class="medium_icon">Icon: <b><%= medium.icon %></b></span><br>
    <% end %>

      <%= link_to edit_medium_path(medium, ref:request.path), :class => 'edit_button', :title => "edit" do %>
       <i class="fa fa-pencil fa-lg"></i>
      <% end %>

      <%= link_to medium, method: :delete, data: { confirm: 'Are you sure?' } , :class => 'delete_button', :title=>"Delete" do %>
        <i class="fa fa-trash fa-lg"></i>
      <% end %>
  </div>
</div>


