<!-- https://github.com/rails/rails/blob/master/railties/lib/rails/generators/erb/scaffold/templates/_form.html.erb -->

<div class="">
  <%= simple_form_for lesson, :html => {:class => 'form-horizontal'} do |f| %>
    <%= f.error_notification %>
  
    <div class="form-inputs">
      <%= hidden_field_tag(:ref, @return_path) %>
      <%= f.association :course %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :style %>
      <%= f.input :image %>
      <%= f.input :public %>
      <%= f.association :author %>
      <%= f.input :body %>
    
    </div>
  
    <div class="form-actions">
      <%= button_tag(type: 'submit', class: "btn btn-default") do %>
        <i class="fa fa-check"></i> Save
      <% end %>
      

      <%= button_to :back, :class => 'btn btn-default' do %>
        <span class="fa fa-chevron-left"></span>
        Back
      <% end %>
      
    </div>
    
  <% end %>
</div> 
  
