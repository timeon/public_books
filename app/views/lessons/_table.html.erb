<% if show_when_empty or lessons.size > 0 %>
	<% new_lesson = Lesson.new %>

	<div class="row rrow section-header">
    <% if show_title %>
	  <div class="span0">
	    <h3><%= as.pluralize.humanize %></h3>
	  </div>
    <% end %>
  
    <% if show_new %>
      <% new_lesson = Lesson.new %>
      <div class="span0">
      <% if false %>
        <h3><%= render partial: '/lessons/new_modal', 
                        locals:  { lesson: new_lesson, 
                                    owner:owner, 
                                    as:as} %></h3>
      <% end %>

      <h3>
      <%= link_to new_lesson_path(ref:request.path), :class => 'edit_button' do %>
        <span class="fa fa-plus fa-lg"></span>
      <% end %>
      </h3>

      </div>
    <% end %>
 
    
	</div>

	<% if lessons.class.name == "ActiveRecord::Relation" and show_pages %>
	  <%= will_paginate lessons %>
	<% end %>  

	<div class="table-responsive">
	  <table class="table table-hover table-striped">
	    <%= render partial: '/lessons/header' %>

	    <tbody>
      <%= render partial: '/lessons/row', collection: lessons, as: :lesson %>
	    </tbody>
	  </table>
	</div>

	<% if false %>
	  <!-- add in a new page, not modal -->
	  <%= link_to new_lesson_path, :class => 'btn btn-default' do %>
	    <span class="fa fa-plus"></span>
	    Add Lesson
	  <% end %>
	<% end %>  

<% end %>  
