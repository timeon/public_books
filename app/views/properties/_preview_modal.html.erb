<!-- Button trigger modal -->
<button class="btn btn-default btn-lg" data-toggle="modal" data-target="#show_property" title="preview">
    <span class="icon icon-info-sign"></span>
</button>


<!-- Modal -->
<div class="modal fade" id="show_property" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Property info</h4>
      </div>
      <div class="modal-body">
        <%= render partial: '/properties/show', locals: {property: property} %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

