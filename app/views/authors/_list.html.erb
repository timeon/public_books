<% if show_when_empty or authors.size > 0 %>

	<div class="row rrow section-header">
    <% if show_title %>
	  <div class="span0">
	    <h3><%= as.pluralize.humanize %></h3>
	  </div>
    <% end %>
  
    <% if show_new %>
      <% new_author = Author.new %>
      <div class="span0">
      <% if false %>
        <h3><%= render partial: '/authors/new_modal', 
                        locals:  { author: new_author, 
                                    owner:owner, 
                                    as:as} %></h3>
      <% end %>

      <h3>
      <%= link_to new_author_path(ref:request.path), :class => 'edit_button' do %>
        <span class="fa fa-plus fa-lg"></span>
      <% end %>
      </h3>
      </div>
    <% end %>
	</div>

	<% if authors.class.name == "ActiveRecord::Relation" and show_pages %>
	  <%= will_paginate authors %>
	<% end %>  

	<div class="table-responsive">
	  <table class="table table-hover table-striped">
	    <% if false %>
	    <%= render partial: '/authors/header' %>
      <% end %>
      
	    <tbody>
        <%= render partial: '/authors/summary', collection: authors, as: :author %>
	    </tbody>
	  </table>
	</div>

	<% if false %>
	  <!-- add in a new page, not modal -->
	  <%= link_to new_author_path, :class => 'btn btn-default' do %>
	    <span class="fa fa-plus"></span>
	    Add Author
	  <% end %>
	<% end %>  

<% end %>  
