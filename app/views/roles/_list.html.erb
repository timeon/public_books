<% if show_when_empty or roles.size > 0 %>
	<% new_role = Role.new %>

	<div class="row rrow section-header">
	  <div class="span0">
	    <h3><%= as.pluralize.humanize %></h3>
	  </div>
  
	  <div class="span0">
	    <h3><%= render partial: '/roles/new_modal', locals:{role:new_role, owner:owner, as:as} %></h3>
	  </div>

	<% if defined? programmer? and programmer? %>    
	  <div class="span0">
	      <h3><em><%= link_to roles_path(:format => "xml"), :class => 'btn btn-default' do %> roles.xml<% end %></em></h3>
	  </div>

	  <div class="span0">
	      <h3><em><%= link_to roles_path(:format => "json"), :class => 'btn btn-default' do %> roles.json<% end %></em></h3>
	  </div>
	<% end %>
  
	</div>

	<% if roles.class.name == "ActiveRecord::Relation" and show_pages %>
	  <%= will_paginate roles %>
	<% end %>  

	<div class="table-responsive">
	  <table class="table table-hover table-striped table-bordered">
	    <%= render partial: '/roles/header' %>
    
	    <tbody>
	      <% roles.each do |role| %>
	        <%= render partial: '/roles/row', locals: {role: role} %>
	      <% end %>
	    </tbody>
	  </table>
	</div>

	<% if false %>
	  <!-- add in a new page, not modal -->
	  <%= link_to new_role_path, :class => 'btn btn-default' do %>
	    <span class="icon icon-plus"></span>
	    Add Role
	  <% end %>
	<% end %>  

<% end %>  
