<tr>
    <td>    
      <span class="category_name"><%= link_to category, category %></span><br>
      <% if !category.description.blank? %>
        <span class="category_description">Description: <b><%= category.description %></b></span><br>
      <% end %>
    </td>    

    <td>    
    <% if admin? %>     
      <%= link_to edit_category_path(category, ref:request.path), :class => 'edit_button', :title => "edit" do %>
       <i class="fa fa-pencil fa-lg"></i>
      <% end %>

      <%= link_to category, method: :delete, data: { confirm: 'Are you sure?' } , :class => 'delete_button', :title=>"Delete" do %>
        <i class="fa fa-trash fa-lg"></i>
      <% end %>
    <% end %>
    </td>    
    
</tr>

